.user,page{
  width: 100%;
  height: 100%;
}
.userlogin{
  width: 100%;
  height: 100%;
  padding-top: 80px;
  box-sizing: border-box;
  background: #FB7299;
}
.music-view{
  width: 80px;
  height: 80px;
  border-radius: 50%;
  background:#FF93B2;
  margin: auto;
  margin-bottom: 200px;
}
image.music{
  width:40px;
  height: 40px;
  text-align: center;
  margin: auto;
  display: block;
  padding-top: 20px;
}
.login-btn{
  margin-top: 100px;
  margin: auto;
  padding: 10px 0;
  width: 200px;
  background: white;
  border-radius: 30px;
  text-align: center;
}
.login-btn text{
  color: #FB7299;
}