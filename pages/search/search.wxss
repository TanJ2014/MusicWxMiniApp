/* pages/search/search.wxss */
.search{
  width: 100%;
}
.search_view{
  width: 100%;
}
.search_form{
  background: #FB7299;
  width: 100%;
}
.disB{
  display: block;
}
.disN{
  display: none;
}
.search_form_input{
  background: #F7B4C6;
  /* width: 100%; */
  padding: 10rpx 50rpx;
  border-radius: 15rpx;
  height: 70rpx;
  margin-left: 5%;
  box-sizing: border-box;
  color: #eee;
}
.search_form_clear{
  position: relative;
  top:-52rpx;
  left: 92%;
  width: 50rpx;
}
.search_form_cancel{
  float: left;
  width: 10%;
  color: #ddd;
  padding-left: 10rpx;
  margin-top: 14rpx;
  box-sizing: border-box;
}
.search_sub{
  width: 85%;
  float: left;
  box-sizing: border-box;
}
.phcolor{
  color: #eee;
}
.search_hot{
  width: 100%;
}
.search_title{
  color: #FB7299;
  font-weight: bold;
  padding: 15px;
  float: left;
}
.hot_item{
  margin-left: 7px;
  margin-bottom: 7px;
  float: left;
  padding: 20rpx 30rpx;
  background: #eee;
  border-radius: 5px;
  color: #FB7299;
  font-size: 13px;
}
.clear_history{
  float: right;
  /* position: relative; */
  font-size: 13px;
  /* top: -35px;
  right: 20px; */
  margin-top: 15px;
  margin-right: 20px;
  background: #eee;
  color: #666;
  border-radius: 5px;
  padding: 3px 10px;
}
.search_history{
  width: 100%;
}
.hot_list{
  clear: both;
  width: 100%;
  height: auto;
}
.clearfix::after{
  visibility: hidden;
  display: block;
  font-size: 0;
  content: " ";
  clear: both;
  height: 0;
}
.sub{
  /* height: 30px; */
}
.suggest_search,.search_result{
  width: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.suggest_text{
  padding: 30rpx;
  border-bottom: 1px solid #eee;
}
.suggest_text text{
  color: #333;
  display: block;
}
text.sing{
  font-size: 16px;
}
text.sing_desc{
  font-size: .8rem;
  color: #bbb;
  line-height: 25px;
}