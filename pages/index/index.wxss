/**index.wxss**/
page{
  width: 100%;
  height: 100%;
}
.home_search{
  padding: 30rpx;
  width: 100%;
  background-color: #FB7299;
}
.home_search input{
  color: #eee;
  background-color: #F7B4C6;
  font-size: .9rem;
  padding: 10rpx 20rpx;
  margin: 0 30rpx;
  border-radius: 15rpx;
  text-align: center;
}
.phClass{
  color: white;
}
.swiper_header{
  background-color: #FB7299;
  width: 100%;
  color: white;
  font-size: .9rem;
}
.swiper_left,.swiper_right{
  display: inline-block;
  width: 50%;
  text-align: center;
  padding-bottom: 15rpx;
}
.swiper_line{
  border-bottom: 10rpx solid #F7B4C6;
}
.home_swiper{
  width: 100%;
  height: 100%;
}
.home_swiper .recommend,
.radio{
  width: 100%;
  height: 100%;
  overflow: scroll;
}
.gexin_swiper swiper-item{
  width: 100%;
}
.gexin_swiper image{
  width: 100%;
  height: 300rpx;
}
/* 四个推荐入口 */
.recmdList{
  display: flex;
  position: relative;
  margin-top: 40rpx;
  padding-bottom: 20rpx;
  border-bottom: 1px solid #EDEEF0;
}
.recmdItem{
  width: 25%;
  color: #FB7299;
  text-align: center;
}
.recmdItem text{
  color: #333;
  display: inline-block;
  margin: 10rpx 0;
}
.recmdItem .recmdImage{
  left: 50%;
  transform: translate(50%);
  width: 100rpx;
  height: 50px;
  background-color: #FB7299;
  border-radius: 100%;
  text-align: center;
  vertical-align: middle;
}
.recmdItem .recmdImage image{
  width: 50rpx;
  height: 50rpx;
  margin-top: 25rpx;
}

/* 最新音乐 */
.newest_music .subtitle{
  display: block;
  padding: 3% 5%;
  font-size: larger;
}
.newest_music_list{
  width: 100%;
  /* height: 360rpx; */
}
.newest_music_item{
  float: left;
  width: 28%;
  margin-left: 3%;
  margin-bottom: 20px;
}
.newest_music_item:nth-child(3n+1){
  margin-left:5%;
}
.newest_music_item image{
  width: 100%;
  height: 200rpx;
  border-radius: 10rpx;
}
.newest_music_item text{
  display: block;
}
.newest_music_item text.music_name,
.newest_music_item text.music_songer,
.newest_mv_list text.music_name{
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;  
}
.newest_music_item text.music_songer{
  font-size: 13px;
  line-height: 20px;
  color: #666;
}
/* 推荐MV */
.newest_mv_list{
  width: 100%;
}
.newest_mv_item{
  float: left;
  width: 42%;
  margin-left: 5%;
  margin-left: 5%;
  margin-bottom: 20px;
}

.newest_mv_item image{
  width: 100%;
  height: 220rpx;
  border-radius: 10rpx;
}
